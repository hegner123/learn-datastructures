{
  "testCases": [
    {
      "description": "Empty array",
      "input": {
        "arr": [],
        "target": 5
      },
      "expected": false
    },
    {
      "description": "Single element - found",
      "input": {
        "arr": [42],
        "target": 42
      },
      "expected": true
    },
    {
      "description": "Single element - not found",
      "input": {
        "arr": [42],
        "target": 10
      },
      "expected": false
    },
    {
      "description": "Multiple elements - target at beginning",
      "input": {
        "arr": [1, 2, 3, 4, 5],
        "target": 1
      },
      "expected": true
    },
    {
      "description": "Multiple elements - target at end",
      "input": {
        "arr": [1, 2, 3, 4, 5],
        "target": 5
      },
      "expected": true
    },
    {
      "description": "Multiple elements - target in middle",
      "input": {
        "arr": [1, 2, 3, 4, 5],
        "target": 3
      },
      "expected": true
    },
    {
      "description": "Multiple elements - target not found",
      "input": {
        "arr": [1, 2, 3, 4, 5],
        "target": 10
      },
      "expected": false
    },
    {
      "description": "Array with negative numbers - found",
      "input": {
        "arr": [-5, -2, -8, -1],
        "target": -2
      },
      "expected": true
    },
    {
      "description": "Array with negative numbers - not found",
      "input": {
        "arr": [-5, -2, -8, -1],
        "target": 2
      },
      "expected": false
    },
    {
      "description": "Array with duplicates - found",
      "input": {
        "arr": [7, 7, 7, 7],
        "target": 7
      },
      "expected": true
    }
  ]
}