{
  "testCases": [
    {
      "name": "Single Node Creation",
      "input": { "value": 5 },
      "expected": "Node with value 5"
    },
    {
      "name": "Single Node BST Validation",
      "input": { "tree": "single node with value 5" },
      "expected": true
    },
    {
      "name": "Valid Small BST",
      "input": { "tree": "5 with left child 2 and right child 7" },
      "expected": true
    },
    {
      "name": "Invalid BST",
      "input": { "tree": "5 with left child 8 (violates BST property)" },
      "expected": false
    },
    {
      "name": "Empty Tree Validation",
      "input": { "tree": null },
      "expected": true
    },
    {
      "name": "Find Min Single Node",
      "input": { "tree": "single node with value 10" },
      "expected": 10
    },
    {
      "name": "Find Min Empty Tree",
      "input": { "tree": null },
      "expected": -1
    },
    {
      "name": "Find Max Single Node",
      "input": { "tree": "single node with value 15" },
      "expected": 15
    },
    {
      "name": "Find Max Empty Tree",
      "input": { "tree": null },
      "expected": -1
    },
    {
      "name": "Find Min/Max Complex Tree",
      "input": { "tree": "BST with values 1,3,5,7,9" },
      "expected": { "min": 1, "max": 9 }
    }
  ]
}